{
  "type"     :"object",
  "$schema"  : "http://json-schema.org/draft-04/schema",
  "id"       : "http://jsonschema.net",
  "required" : true,
  "properties": {
    "drinkID" : {
      "type": "string"
    },
    "drinkName"  : {
      "type": "string"
    },
    "drinkFamily" : {
      "type": "string",
      "enum": ["Blacked Espresso", "Milked Espresso"]
    },
    "drinkBlurb"  : {
      "type":  "string"
    },
    "drinkHotCold": {
      "type": "string",
      "enum": ["Hot", "Cold"]
    },
    "drinkWikiURL": {
      "type": "string",
      "format": "uri"
    }
  }
}
